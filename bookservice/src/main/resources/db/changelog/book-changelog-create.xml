<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- TABLE BOOK -->
    <changeSet id="create-table-book" author="tanthanh">
        <preConditions onFail="CONTINUE" onFailMessage="table book already exists">
            <not>
                <tableExists tableName="books"/>
            </not>
        </preConditions>
        <createTable tableName="books">
            <column name="book_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-book-add-column-author" author="tanthanh">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="author" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="table-book-add-column-isReady" author="tanthanh">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="is_ready" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="is_ready" type="bit(1)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="table-book-add-column-name" author="tanthanh">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="name" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="table-book-add-column-email" author="tanthanh">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="email" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>